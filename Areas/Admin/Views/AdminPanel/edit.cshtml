@model Shop.Models.Product.AddProductViewModel

<h2>Edit Product</h2>

<form asp-action="SaveEdit" asp-controller="Product" method="post">
    <div class="form-group">
        <label asp-for="Model">Model</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <!-- Dropdown for Makes -->
    <div class="form-group">
        <label asp-for="MakeId">Make</label>
        <select asp-for="MakeId" asp-items="@(new SelectList(Model.Makes, "Id", "Name"))" class="form-control"></select>
    </div>
    <!-- Dropdown for Categories -->
    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="form-control"></select>
    </div>
    <!-- Dropdown for Colors -->
    <div class="form-group">
        <label asp-for="ColorId">Color</label>
        <select asp-for="ColorId" asp-items="@(new SelectList(Model.Colors, "Id", "Name"))" class="form-control"></select>
    </div>
    <!-- Dropdown for ModelTypes -->
    <div class="form-group">
        <label asp-for="ModelTypeId">Model Type</label>
        <select asp-for="ModelTypeId" asp-items="@(new SelectList(Model.ModelTypes, "Id", "Name"))" class="form-control"></select>
    </div>
    <!-- Textarea for Description -->
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <!-- Dropdown for Sizes -->
    <div class="form-group">
        <label asp-for="SizeId">Size</label>
        <select asp-for="SizeId" asp-items="@(new SelectList(Model.Sizes, "Id", "Name"))" class="form-control"></select>
    </div>
    <!-- Input for Price -->
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Product</button>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
