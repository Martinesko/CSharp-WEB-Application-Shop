

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="/css/Shopping Cart/cart.css">
</head>
<body>
    <div class="shopping-cart" align="center">
        <h1>Shopping Cart</h1>
            @if (Model.Count > 0)
            {
        <table>
            <thead>
                <tr>
                        <th><div align="center">Model</div></th>
                        <th><div align="center">Price</div></th>
                        <th><div align="center">Action</div></th>
                </tr>
            </thead>
            <tbody>
            
               @foreach (var product in Model)
                {
                    <tr>
                            <td><div align="center">@product.Model</div></td>
                        <td><div align="center">$@product.Price</div></td>
                            <td><div align="center"><a  class="remove-btn" href="https://localhost:7105/shoppingCart/remove?productId=@product.Id">Remove</a></div></td>
                    </tr>
                }
            
                
            </tbody>
        </table>
            }
            else
            {
                <div align="center">
                <h3>Cart is empty</h3>
                </div>
            }
        @if (Model.Count > 0)
        {
            <div class="cart-total">
            <strong>Total:$@ViewBag.Total</strong>
        </div>
        
            <div class="checkout-button">
                <a href="/CheckOut/CheckOut" class="order-btn">Checkout</a>
            </div>
        }

    </div>
</body>
</html>