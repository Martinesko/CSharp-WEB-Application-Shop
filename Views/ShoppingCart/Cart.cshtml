

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="/css/cart.css">
</head>
<body>
<div class="shopping-cart">
    <h1>Shopping Cart</h1>
    <table>
        <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th></th> <!-- for remove button -->
        </tr>
        </thead>
        <tbody>
        <!-- Example cart item -->
        @foreach (var product in Model)
        {
            <tr>
            <td>@product.Model</td>
            <td>@product.Price</td>
                <td><button>Remove</button></td>
        </tr>
        }
        <!-- Repeat rows like the above for each item in the cart -->
        </tbody>
    </table>
    <div class="cart-total">
            <strong>Total:@ViewBag.Total</strong>
        </div>
    <div class="checkout-button">
        <button>Checkout</button>
    </div>
</div>
</body>
</html>