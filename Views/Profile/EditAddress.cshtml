@model Shop.Models.Profile.AddressViewModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Address</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .change-address-container {
            max-width: 600px;
            margin: 50px auto;
        }
    </style>
</head>

<body>

    <div class="container change-address-container">
        <h2>Change Address</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" placeholder="City...">
                <span asp-validation-for="City" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street1"></label>
                <input asp-for="Street1" class="form-control" placeholder="Street1...">
                <span asp-validation-for="Street1" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street2">(Optional)</label>
                <input asp-for="Street2" class="form-control" placeholder="Street2...">
                <span asp-validation-for="Street2" class="small text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="StreetNumber"></label>
                <input asp-for="StreetNumber" class="form-control" placeholder="Street Number...">
                <span asp-validation-for="StreetNumber" class="small text-danger"></span>
             </div> 
            <div class="form-group">
                <label asp-for="PostCode"></label>
                <input asp-for="PostCode" class="form-control" placeholder="Street Number...">
                <span asp-validation-for="PostCode" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedCountryId"></label>
                <select asp-for="SelectedCountryId" class="form-control">
                    @foreach (var type in Model.Countries)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="SelectedCountryId" class="small text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>

</body>

</html>
