@{
    ViewBag.Title = "Edit Product";
}
@model Shop.Models.Product.AddProductViewModel; // Use an appropriate ViewModel for Editing

<div class="row" align="center">
    <h1>Edit Product</h1>
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <!--  Make  -->
            <div class="form-group">
                <label asp-for="ModelName"></label>
                <input asp-for="ModelName" class="form-control" placeholder="Make..." value="@Model.ModelName">
                <span asp-validation-for="ModelName" class="small text-danger"></span>
            </div>
            <!--  Description  -->
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Two bedrooms..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <!--  ImgUrl  -->
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <!--  Price  -->
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>

            <!--  TypeId  -->
            <div class="form-group">
                <label asp-for="ModelTypeId"></label>
                <select asp-for="ModelTypeId" class="form-control">
                    @foreach (var type in Model.ModelTypes)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="ModelTypeId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SizeId"></label>
                <select asp-for="SizeId" class="form-control">
                    @foreach (var type in Model.Sizes)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="SizeId" class="small text-danger"></span>
            </div>
            <!--  MakeId  -->
            <div class="form-group">
                <label asp-for="MakeId"></label>
                <select asp-for="MakeId" class="form-control">
                    @foreach (var type in Model.Makes)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="MakeId" class="small text-danger"></span>
            </div>
            <!--  CategoryId  -->
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
            </div>
            <!--  ColorId  -->
            <div class="form-group">
                <label asp-for="ColorId"></label>
                <select asp-for="ColorId" class="form-control">
                    @foreach (var color in Model.Colors)
                    {
                        <option value="@color.Id">@color.Name</option>
                    }
                </select>
                <span asp-validation-for="ColorId" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>